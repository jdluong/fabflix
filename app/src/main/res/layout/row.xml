<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/darker_gray">

    <TextView
            android:id="@+id/title"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" android:paddingLeft="5dp" android:paddingRight="5dp"/>

    <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:paddingTop="1dp" android:paddingBottom="5dp"/>

</LinearLayout>